<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.Views.MenuPage"

             Title="Menu">

    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="{DynamicResource Background}" Padding="0, 50, 0, 0">

        <Image x:Name="SelectedImage" WidthRequest="100" HeightRequest="200"/>
        <Label x:Name="Name" HorizontalTextAlignment="Center" FontSize="20" />

        <ListView x:Name="ListViewMenu" HasUnevenRows="True" Margin="0, 50, 0, 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Label Text="{Binding Title}" HorizontalTextAlignment="Center" FontSize="24"/>
                        </Grid>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Exit" BackgroundColor="{DynamicResource ItemColor}" Clicked="Button_OnClicked" FontSize="24"/>
    </StackLayout>

</ContentPage>